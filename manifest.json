{
    "name": "Sympa",
    "id": "sympa",
    "packaging_format": 1,
    "description": {
        "en": "Mailing List manager",
        "fr": "Gestionnaire de liste de diffusion"
    },
    "url": "https://www.sympa.org/",
    "version": "6.2.25b-2",
    "license": "free",
    "maintainer": {
        "name": "alexAubin",
        "email": "alex.aubin@mailoo.org",
        "url": "https://github.com/alexAubin/"
    },
    "requirements": {
        "yunohost": ">= 2.5.6"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "mysql",
        "postfix"
    ],
    "arguments": {
        "install" : [
            {
                "name": "swap_ack",
                "ask": {
                    "en": "This application needs 500 Mo of RAM. The install script will automatically add swap on the system. Swap is not good if it's on an SD card life, though. Do you agree with adding swap (required, but doesn't work with BTRFS filesystem on /tmp) ?",
                    "fr": "Cette application necessite 500 Mo de RAM. Le script d'installation va automatiquement ajouter du swap sur le systeme. Cependant, l'utilisation de swap risque de diminuer sa duree de vie. Etes-vous d'accord avec l'ajout de swap (requis, mais ne fonctionne pas avec BTRFS comme syst√®me de fichier sur /tmp) ?"
                },
                "choices": [ "Yes", "No" ],
                "default": "No"
            },
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Sympa",
                    "fr": "Choisissez un nom de domaine pour Sympa"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Sympa",
                    "fr": "Choisissez un chemin pour Sympa"
                },
                "example": "/sympa",
                "default": "/sympa"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l'administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "language",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": [ "ca", "cs", "de", "el", "es", "et", "en-US", "fr", "fi", "hu", "it", "ja", "ko", "nl", "nb", "oc", "pl", "pt-BR", "ru", "sv", "tr", "vi", "zh-CN", "zh-TW" ],
                "default": "en-US"
            }
        ]
    }
}
